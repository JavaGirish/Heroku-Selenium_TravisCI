<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Heroku Computers Test Suite" preserve-order="true">

<listeners>
<listener class-name = "com.heroku.qa.listeners.AllureTestListener" />
 </listeners>

  <test name="Heroku Application End to End Tests: Add Computer" >
    <classes>
      <class name="com.heroku.qa.datadriven.tests.AddComputer"/>
      
    </classes>
  </test> <!-- Test -->
  
  <test name="Heroku Application End to End Tests: Edit Computer" >
    <classes>
    <class name="com.heroku.qa.datadriven.tests.EditComputer"/>
    </classes>
  </test> <!-- Test -->
  
  
  <test name="Heroku Application End to End Tests: Delete Computer" >
    <classes>
      <class name="com.heroku.qa.datadriven.tests.DeleteComputer"/>
    </classes>
  </test> <!-- Test -->
  
</suite> <!-- Suite -->
